<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane prefHeight="297.0" prefWidth="491.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DialogController">
    <header>
        <Label alignment="TOP_CENTER" text="Insert new book!">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <font>
                <Font name="Consolas Bold" size="16.0" />
            </font>
        </Label>
    </header>
    <padding>
        <Insets bottom="40.0" />
    </padding>
    <opaqueInsets>
        <Insets bottom="20.0" />
    </opaqueInsets>
    <content>
        <VBox prefHeight="182.0" prefWidth="491.0">
            <children>
                <GridPane alignment="TOP_CENTER" depthTest="ENABLE" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" pickOnBounds="false" prefHeight="143.0" prefWidth="471.0" vgap="10.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="166.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="263.0" minWidth="10.0" prefWidth="220.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label fx:id="firstName" prefHeight="17.0" prefWidth="120.0" text="Author's first name" GridPane.rowIndex="1" />
                        <Label fx:id="title" text="Title" GridPane.rowIndex="2" />
                        <Label fx:id="releaseDate" text="Release date" GridPane.rowIndex="3" />
                        <Label fx:id="lastName" text="Author's last name" />
                        <TextField fx:id="lastNM" GridPane.columnIndex="1">
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </TextField>
                        <TextField fx:id="firstNM" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </TextField>
                        <TextField fx:id="titleTF" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="2"
                                   GridPane.vgrow="NEVER">
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </TextField>
                        <TextField fx:id="date" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="3">
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <opaqueInsets>
                        <Insets bottom="30.0" left="5.0" right="5.0" top="5.0" />
                    </opaqueInsets>
                </GridPane>
            </children>
        </VBox>
    </content>

</DialogPane>
